{
	"manifest_version": 3,
	"name": "ZZim Auto",
	"version": "0.1.0",
	"action": {
		"default_popup": "popup/popup.html"
	},
	"permissions": [
		"storage",
		"tabs"
	],
	"host_permissions": [
		"https://smartstore.naver.com/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://smartstore.naver.com/*"
			],
			"js": [
				"content/content.js"
			],
			"run_at": "document_idle"
		}
	]
}

