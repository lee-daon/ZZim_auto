{
	"manifest_version": 3,
	"name": "ZZim Auto",
	"version": "0.1.0",
	"action": {
		"default_popup": "popup/popup.html"
	},
	"permissions": [
		"storage",
		"scripting",
		"activeTab",
		"tabs"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"background": {
		"service_worker": "background/service-worker.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content/content.js"
			],
			"run_at": "document_idle"
		}
	]
}

