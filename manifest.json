{
	"manifest_version": 3,
	"name": "ZZim Auto",
	"version": "0.1.4",
	"description": "스스 찜 v0.1.4추가: 네이버 로직 대응",
	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "icons/161.png",
			"48": "icons/481.png"
		  }
	},
	"icons": {
		"16": "icons/161.png",
		"48": "icons/481.png"
	},
	"permissions": [
		"storage",
		"tabs"
	],
	"host_permissions": [
		"https://smartstore.naver.com/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://smartstore.naver.com/*"
			],
			"js": [
				"content/content.js"
			],
			"run_at": "document_idle"
		}
	]
}

